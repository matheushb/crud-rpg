generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Character {
  id       String @id @default(uuid())
  name     String
  nickname String
  class    Class
  level    Int    @default(1)
  strength Int
  defense  Int

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  magic_items MagicItem[]
}

model MagicItem {
  id       String        @id @default(uuid())
  name     String
  strength Int
  defense  Int
  type     MagicItemType

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  Character    Character? @relation(fields: [character_id], references: [id])
  character_id String?
}

enum MagicItemType {
  WEAPON
  ARMOUR
  AMULET
}

enum Class {
  WARRIOR
  MAGE
  ARCHER
  ROGUE
  BARD
}
